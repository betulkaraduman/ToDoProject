
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card text-white bg-secondary mb-3" style="max-width: 120rem;">
            <div class="card-body">
                @if (ViewBag.NotAssign > 0)
                {
                    <p class="card-text"> Not Assign Work Count : @ViewBag.NotAssign</p>}
                else
                {
                    <p class="card-text">You have not Not Assign Work</p>}
                <p><a asp-action="Index" asp-controller="Work" class="btn btn-light">Detail</a></p>

            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-secondary mb-3" style="max-width: 120rem;">
            <div class="card-body">
                @if (ViewBag.Finished > 0)
                {
                    <p class="card-text">Finished Work Count : @ViewBag.Finished</p>
                }
                else
                {<p class="card-text">You have not a finished work</p>
                }
                <p><a asp-action="Index" asp-controller="Work" class="btn btn-light">Detail</a></p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-secondary mb-3" style="max-width: 120rem;">
            <div class="card-body">
                @if (ViewBag.NotReadNotification > 0)
                {

                    <p class="card-text">Not Read Notification Count : @ViewBag.NotReadNotification</p>}
                else
                {   <p class="card-text">You have not a  not read notification</p>
                }
                <p><a asp-action="Index" asp-controller="Notification" class="btn btn-light">Detail</a></p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-secondary mb-3" style="max-width: 120rem;">
            <div class="card-body">
                @if (ViewBag.AllReport > 0)
                {
                    <p class="card-text">Report Count : @ViewBag.AllReport</p>
                }
                else
                {
                    <p class="card-text">You have not a report</p>
                }
                <p><a asp-action="Index" asp-controller="Work" class="btn btn-light">Detail</a></p>
            </div>
        </div>
    </div>
</div>


