@model UrgencyAddDto
@{
    ViewData["Title"] = "AddUrgency";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="addUrgency" asp-controller="Urgency" method="post" class="w-50 mx-auto p-3">
    <div class="form-group">
        <label asp-for="@Model.Definition">Definition</label>
        <input type="text" asp-for="@Model.Definition" class="form-control" />
        <span asp-validation-for="@Model.Definition" class="text-danger"></span>

    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <button type="submit" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-plus mr-2" style="margin-right:5px"></i>Add Urgency</button>

</form>
@section javascript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

