@model List<UrgencyListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-plus mr-2" style="margin-right:5px"></i>Add New Urgency</a>
    <table class="table table-bordered mx-auto m-4">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Process</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Definition</td>
                <td><a asp-action="updateUrgency" asp-route-id="@item.Id" asp-controller="Urgency" class="btn btn-warning btn-sm"><i class="fas fa-pen" style="margin-right:5px;"></i>Update</a></td>
            </tr>
        }

    </table>
}
else
{<div class="text-center">
    <p class="mx-auto lead mt-4">Urgency is not found</p>
    <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-secondary btn-sm my-2">Add New Urgency</a>
</div>}