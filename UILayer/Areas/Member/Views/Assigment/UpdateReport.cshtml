@model ReportUpdateDto
@{
    ViewData["Title"] = "UpdateReport";
    Layout = "~/Areas/Member/Views/Shared/_memberLayout.cshtml";
}


<form asp-action="UpdateReport" asp-controller="Assigment" method="post" class="w-50 mx-auto p-3">
    <div class="card text-white bg-secondary mb-3">
        <div class="p-3">
            <p><span class="text-danger"> <b>Work Name :</b> </span>@Model.work.Name</p>
            <p><span class="text-danger"><b> Work Description :</b> </span>@Model.work.Description</p>
            <p><span class="text-danger"><b> Work Urgency : </b></span>@Model.work.urgency.Definition</p>
        </div>
    </div>
    <input type="hidden" asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.Definition"></label>
        <input type="text" asp-for="@Model.Definition" class="form-control" />
        <span asp-validation-for="@Model.Definition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Detail"></label>
        <input type="text" asp-for="@Model.Detail" class="form-control" />
        <span asp-validation-for="@Model.Detail" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <a asp-action="Index" class="btn btn-warning btn-sm">Return</a>
    <button type="submit" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-plus mr-2" style="margin-right:5px"></i>Add Urgency</button>

</form>
