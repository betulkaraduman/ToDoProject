@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_memberLayout.cshtml";
}


@if (Model.Count > 0)
{

    @foreach (var item in Model)
    {
        <div class="alert alert-info p-3">
            <form method="post" asp-action="Index" asp-route-id="@item.Id" class="my-1">
                <p class="lead">
                    <input type="hidden" name="Id" value="@item.Id" />
                    @item.Description
                    <button type="submit" class="btn btn-danger btn-sm float-right">Readed</button>
                </p>
            </form>
        </div>
        <hr />

    }
}
else
{ <div class="alert alert-info p-3">You have not no readed notification</div>}
