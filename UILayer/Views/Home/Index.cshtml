@model LoginDto 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<div class="container">
    <form asp-action="Login" asp-controller="Home" method="post" class="w-75 mx-auto p-3 m-4 shadow">

        <div class="form-group">
            <label asp-for="@Model.Username">Username</label>
            <input type="text" asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" />
            <label asp-for="@Model.RememberMe" class="form-check-label">Remembe Me</label>
            <span asp-validation-for="@Model.RememberMe" class="text-danger"></span>

        </div>


        <div asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-info btn-sm my-2">Login</button>
        <a asp-action="Register" asp-controller="Home"  class="btn btn-secondary btn-sm my-2" >Register</a>

    </form>
</div>
@section javascript{


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

