@model RegisterDto 
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<div class="container">
    <form asp-action="Register" asp-controller="Home" method="post" class="w-75 mx-auto p-3 m-4 shadow">
        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Surname">Surname</label>
            <input type="text" asp-for="@Model.Surname" class="form-control" />
            <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Username">Username</label>
            <input type="text" asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email">Email</label>
            <input type="text" asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>


        <div asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-danger btn-block btn-sm my-2">Register</button>

    </form>
</div>
@section javascript{


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

